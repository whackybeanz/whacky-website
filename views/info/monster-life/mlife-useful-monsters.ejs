<div class="font-content w-100 d-flex justify-content-center align-items-center flex-column">
    <div class="w-100 d-flex flex-column justify-content-center px-3 py-3">
        <div class="pill-section rounded-sm mb-5">
            <div class="pill-section-subheader text-center pb-2">
                <h2 class="font-subsubheader font-weight-bold d-flex justify-content-center align-items-center py-1 mb-0">
                    <img src="<%= icons['default-icon'].imgUrl %>" class="mr-2" width="35" height="35" alt="<%= icons['default-icon'].name %>"> Useful Monsters
                </h2>
                <p class="mb-0">
                    Only monsters involved in Special fusions appear below
                </p>
            </div>
            <div class="pill-section-content font-form d-flex flex-wrap justify-content-center pt-3 px-3">
                <div class="w-100 d-flex justify-content-center align-items-center flex-column position-relative">
                    <% for(let singleMonster of sortedListByEffect.filter(monster => monster.type === "Special")) { %>
                        <%- include("./mlife-monster-list", { singleMonster: singleMonster }) %>
                    <% } %>

                    <% for(let singleMonster of sortedListByEffect.filter(monster => monster.type !== "Special")) { %>
                        <%- include("./mlife-monster-list", { singleMonster: singleMonster }) %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>