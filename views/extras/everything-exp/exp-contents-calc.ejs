<div class="font-content w-100 d-flex justify-content-center align-items-center flex-column">
    <div class="w-100 d-flex flex-column justify-content-center px-3 py-3">
        <div class="pill-section rounded-sm mb-5">
            <div class="pill-section-subheader text-center pb-2">
                <h2 class="font-subsubheader font-weight-bold d-flex justify-content-center align-items-center py-1 mb-0">
                    <img src="<%= icons['map-maple-live'].imgUrl %>" class="mr-2"> Calculator
                </h2>
                <p class="mb-0">
                    With consistent effort, what level will you end up at?
                </p>
            </div>
            <div class="pill-section-content table-responsive font-form d-flex flex-column align-items-center py-3" id="calc-exp-contents">
                <div class="col-12 d-flex mb-3">
                    <div class="col-6 px-0 border-right d-flex flex-column align-items-center">
                        <p class="w-100 text-center mb-1 px-0">Select dailies:</p>
                        <div class="d-flex flex-wrap justify-content-center mb-2">
                            <% expContents.dailies.forEach((daily, index) => { %>
                                <% if(index === 6) { %>
                                    <div class="w-100"></div>
                                <% } %>
                                <div class="single-exp-content daily-quest rounded-sm cursor-pointer mx-1 my-1" id="calc-daily-<%= icons[daily.iconId] %>">
                                    <img class="item-square" src="<%= icons[daily.iconId].imgUrl %>" data-toggle="tooltip" data-placement="bottom" title="<%= daily.name %>">
                                </div>
                            <% }) %>
                        </div>
                        <form class="w-100 d-flex flex-column align-items-center mb-2">
                            
                        </form>
                    </div>
                    <div class="col-6 px-0 d-flex flex-column justify-content-center">
                        <form class="w-100 d-flex flex-column align-items-center mb-2">
                            <div class="form-group row w-100 d-flex justify-content-center align-items-center mb-2">
                                <input type="number" id="" class="form-control col-3 col-md-1 px-2 text-center" placeholder="Qty" value="0">
                                <div class="col-8 px-2">
                                    <select class="form-control" id="potion-exp-calc-select">
                                        <option value="erda-spectrum" selected>Erda Spectrum</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row w-100 d-flex justify-content-center align-items-center mb-2">
                                <input type="number" id="" class="form-control col-3 col-md-1 px-2 text-center" placeholder="Qty" value="0">
                                <div class="col-8 px-2">
                                    <select class="form-control" id="potion-exp-calc-select">
                                        <option value="muto-easy">Hungry Muto (Easy)</option>
                                        <option value="muto-normal">Hungry Muto (Normal)</option>
                                        <option value="muto-hard">Hungry Muto (Hard)</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row w-100 d-flex justify-content-center align-items-center mb-2">
                                <input type="number" id="" class="form-control col-3 col-md-1 px-2 text-center" placeholder="Qty" value="0">
                                <div class="col-8 px-2">
                                    <select class="form-control" id="potion-exp-calc-select">
                                        <option value="0" selected disabled hidden>- Select Monster Park -</option>
                                        <% expContents.monsterPark.forEach((dungeon, index) => { %>
                                            <% if(index === 0) { %>
                                                <option value="0" class="font-weight-bold" disabled>[Level 105~115]</option>
                                            <% } %>
                                            <% if(index === 8) { %>
                                                <option value="0" class="font-weight-bold" disabled>[Level 116~160]</option>
                                            <% } %>
                                            <% if(index === 15) { %>
                                                <option value="0" class="font-weight-bold" disabled>[Level 161+]</option>
                                            <% } %>
                                            <option value="<%= dungeon.iconId %>"><%= dungeon.name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row w-100 d-flex justify-content-center align-items-center mb-2">
                                <input type="number" id=""class="form-control col-3 col-md-1 px-2 text-center" placeholder="Qty" value="0">
                                <div class="col-8 px-2">
                                    <select class="form-control" id="potion-exp-calc-select">
                                        <option value="0" selected disabled hidden>- Select EXP Minigame -</option>
                                        <option value="0">Maple LIVE</option>
                                        <option value="0">DESTINY</option>
                                        <option value="0">Momentree - Wardrobe 2F</option>
                                        <option value="0">Momentree - Wardrobe 3F</option>
                                        <option value="0">Momentree - Wardrobe 4F</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="w-100 d-flex flex-column flex-sm-row mb-2">
                    <form class="col-12 col-sm-6 w-100 d-flex flex-column justify-content-center align-items-start px-0">
                        <div class="form-group row w-100 d-flex mb-2">
                            <label class="col-6 font-weight-bold col-form-label text-right">Start Level</label>
                            <input type="number" id="start-potion-char-level" class="form-control col-4 px-2" value="200">
                        </div>
                        <div class="form-group row w-100 d-flex mb-2">
                            <label class="col-6 font-weight-bold col-form-label text-right">EXP (%)</label>
                            <input type="number" id="start-potion-char-exp-percent" class="form-control col-4 px-2" value="0.000">
                            <small class="offset-6 text-danger d-none" id="exp-percent-input-error">Input should be below 100.000%</small>
                        </div>
                        <div class="form-group row w-100 d-flex mb-2">
                            <label class="col-6 font-weight-bold col-form-label text-right">EXP (Value)</label>
                            <input type="number" id="start-potion-char-exp-raw" class="col-6 form-control px-2" value="0">
                            <small class="offset-6 text-danger d-none" id="exp-raw-input-error">Input exceeds level's EXP to level</small>
                        </div>
                    </form>

                    <form class="col-12 col-sm-6 w-100 d-flex flex-column justify-content-center align-items-start text-custom px-0">
                        <div class="form-group row w-100 d-flex mb-2">
                            <label class="col-6 font-weight-bold col-form-label text-right">End Level</label>
                            <input type="number" id="end-potion-char-level" class="form-control-plaintext col-4 text-custom px-2" value="200" readonly>
                        </div>
                        <div class="form-group row w-100 d-flex mb-2">
                            <label class="col-6 font-weight-bold col-form-label text-right">EXP (%)</label>
                            <input type="text" id="end-potion-char-exp-percent" class="form-control-plaintext col-4 text-custom px-2" value="0.000" readonly>
                        </div>
                        <div class="form-group row w-100 d-flex mb-2">
                            <label class="col-6 font-weight-bold col-form-label text-right">EXP (Value)</label>
                            <input type="text" id="end-potion-char-exp-raw" class="col-6 form-control-plaintext text-custom px-2" value="0" readonly>
                        </div>
                    </form>
                </div>

                <button type="button" class="table-cols-125 btn btn-sm btn-outline-custom d-none" id="btn-calc-pot-result"><i class="fas fa-check"></i> (Re)Calculate</button>
            </div>
        </div>
    </div>
</div>