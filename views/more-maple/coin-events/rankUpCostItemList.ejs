<div class="single-shop font-content w-100 d-none mb-3" id="coin-shop-rank-up">
    <div class="w-100 d-flex justify-content-center flex-wrap">
        <div class="size-900 w-100">
            <table class="font-table w-100 table table-bordered table-hover mb-0">
                <thead>
                    <tr>
                        <th class="text-center text-sm-left align-middle py-2">Item / Notes</th>
                        <th class="table-cols-50 d-none text-center align-middle py-2">Price</th>
                        <th class="table-cols-50 d-none text-center align-middle py-2">Quantity</th>
                        <th class="table-cols-75 text-center align-middle py-2">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% coinEventData.coinDetails.forEach((coin, coinIndex) => { %>
                        <% if(coin.isUsedForRankUp) { %>
                            <tr>
                                <td class="align-middle">
                                    <input type="hidden" name="itemName" id="shop-rank-up-item-<%= coinIndex %>-name" value="Rank Up Purchase - <%= icons[`${coin.iconId}`].name %>">
                                    <input type="hidden" name="itemTradability" id="shop-rank-up-item-<%= coinIndex %>-tradability" value="o">
                                    Rank Up Purchase <%= icons[`${coin.iconId}`].name %>
                                    <% if(coin.coinNotes !== "") { %>
                                        <div class="d-inline ml-1" data-toggle="tooltip" data-placement="bottom" title="<%= coin.coinNotes %>">
                                            <i class="fas fa-info-circle"></i>
                                        </div>
                                    <% } %>   
                                </td>
                                <td class="table-cols-50 d-none text-center align-middle">
                                    <input type="hidden" name="itemPrice" id="shop-rank-up-item-<%= coinIndex %>-price" value="1">
                                    <input type="hidden" name="itemCoinType" id="shop-rank-up-item-<%= coinIndex %>-coinType" value="<%= coin.iconId %>">
                                    <input type="hidden" name="itemCurrency" id="shop-rank-up-item-<%= coinIndex %>-currency" value="<%= icons[`${coin.iconId}`].imgUrl.substring(0, icons[`${coin.iconId}`].imgUrl.lastIndexOf(".")) + "-mini" + icons[`${coin.iconId}`].imgUrl.substring(icons[`${coin.iconId}`].imgUrl.lastIndexOf(".")) %>">
                                    1
                                </td>
                                <td class="table-cols-50 d-none text-center align-middle">
                                    <%= coinGainsAndCosts[coin.iconId].rankCosts %>
                                </td>
                                <td class="text-center align-middle py-2 px-2">
                                    <div class="d-flex flex-column align-items-center justify-content-center">
                                        <div class="d-flex align-items-center justify-content-center">
                                            <div class="qty-minus-one d-flex align-items-center justify-content-center cursor-pointer" data-input-id="shop-rank-up-item-<%= coinIndex %>">
                                                <i class="fas fa-minus text-danger"></i>
                                            </div>
                                            <input type="number" class="buy-item-input form-control text-center px-2" name="itemBuyQty" data-shop-id="rank-up" data-item-id="<%= coinIndex %>" id="shop-rank-up-item-<%= coinIndex %>" value="">
                                            <div class="qty-plus-one d-flex align-items-center justify-content-center cursor-pointer" data-input-id="shop-rank-up-item-<%= coinIndex %>">
                                                <i class="fas fa-plus text-success"></i>
                                            </div>
                                        </div>
                                        <small>
                                            (Max: <span id="shop-rank-up-item-<%= coinIndex %>-max-qty"><%= coinGainsAndCosts[coin.iconId].rankCosts %></span>)
                                        </small>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>