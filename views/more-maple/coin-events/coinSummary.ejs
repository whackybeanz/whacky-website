<table class="font-table w-100 table table-bordered table-hover mb-4">
    <thead>
        <tr>
            <th class="table-cols-125 text-center text-sm-left align-middle py-2">Currency</th>
            <th class="align-middle py-2">Currency Numbers</th>
            <th class="text-center align-middle py-2">
                Total Expense
                <div class="d-inline ml-1" data-toggle="tooltip" data-placement="bottom" title="Calculated based on items you have selected in the shops below">
                    <i class="fas fa-question-circle"></i>
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        <% coinEventData.coinDetails.forEach(coin => { %>
            <tr>
                <td class="table-cols-125 text-center text-sm-left align-middle py-2 position-relative">
                    <img class="mr-2" src="<%= icons[`${coin.iconId}`].imgUrl %>">
                    <br class="d-inline d-sm-none">
                    <%= icons[`${coin.iconId}`].name %>

                    <% if(coin.coinNotes && coin.coinNotes !== "") { %>
                        <div class="d-inline ml-1" data-toggle="tooltip" data-placement="bottom" title="<%= coin.coinNotes %>">
                            <i class="fas fa-info-circle"></i>
                        </div>
                    <% } %>
                </td>
                <td class="align-middle py-2">
                    <div class="d-flex flex-column align-items-start">
                        <p class="mb-0">
                            Max Possible Total: 
                            <% if(coin.mainSource.maxTotal === 0) { %>
                                <%= (coinGainsAndCosts[coin.iconId].mainSourceCoins + coinGainsAndCosts[coin.iconId].extraSourceCoins).toLocaleString('en-SG') %>
                            <% } else { %>
                                <%= coin.mainSource.maxTotal.toLocaleString('en-SG') %>
                            <% } %>
                        </p>

                        <% if(coin.extraSources.length > 0) { %>
                            <p class="mb-0">- Main Source: <%= coinGainsAndCosts[coin.iconId].mainSourceCoins.toLocaleString('en-SG') %></p>

                            <% if(coinGainsAndCosts[coin.iconId].extraSourceCoins > 0) { %>
                                <p class="mb-0">- Extra Sources: <%= coinGainsAndCosts[coin.iconId].extraSourceCoins.toLocaleString('en-SG') %></p>
                            <% } %>
                        <% } %>

                        <% if(coin.isUsedForRankUp) { %>
                            <br/>
                            <p class="mb-0">Rank up costs: <%= coinGainsAndCosts[coin.iconId].rankCosts.toLocaleString('en-SG') %></p>
                            <br/>
                            <p class="font-weight-bold mb-0">Amount Left: <%= (coinGainsAndCosts[coin.iconId].mainSourceCoins + coinGainsAndCosts[coin.iconId].extraSourceCoins - coinGainsAndCosts[coin.iconId].rankCosts).toLocaleString('en-SG') %></p>
                        <% } %>
                    </div>
                </td>
                <td class="text-center align-middle py-2" id="<%= coin.iconId %>-total-expense">
                    -
                </td>
            </tr>
        <% }) %>
        <% if(coinEventData.hasMesosShop) { %>
            <tr>
                <td class="table-cols-125 text-center text-sm-left align-middle py-2 position-relative">
                    <img class="mr-2" src="<%= icons['mesos'].imgUrl %>">
                    <br class="d-inline d-sm-none">
                    Mesos
                </td>
                <td class="align-middle py-2">
                    -
                </td>
                <td class="text-center align-middle py-2" id="mesos-total-expense">
                    -
                </td>
            </tr>
        <% } %>
    </tbody>
</table>