<div class="<% if(!coinData.isUsedForRankUp) { %>d-none<% } %>" id="rank-up-table">
    <h3 class="w-100 font-subsubheader font-weight-bold font-italic mb-1">Rank Details</h3>
    <p class="text-custom mb-2">Insert each rank and its cost on a separate row. Calculate the <span class="text-underline">individual rank's</span> coin cost requirement.</p>
    <div class="border border-dark rounded-sm px-3 py-3 mb-5">
        <div class="form-group row">
            <label for="rank-up-notes" class="col-sm-3 col-form-label font-weight-bold">Notes</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="rank-up-notes" name="rankUpNotes" placeholder="Notes" autocomplete="off" <% if(coinData.isUsedForRankUp) { %>value="<%= coinData.rankUpCosts.details %>"<% } %>>
                <small class="text-custom">Notes related to rank up mechanics (e.g. You must pay 200 coins per day for a certain number of days to reach the next rank).</small>
            </div>
        </div>

        <table class="font-table w-100 table table-bordered table-hover mb-0">
            <thead>
                <tr>
                    <th class="py-2 text-center align-middle">
                        Rank Name
                    </th>
                    <th class="py-2 text-center align-middle">
                        Total Coin Cost
                        <div class="d-inline ml-1" data-toggle="tooltip" data-placement="bottom" title="If it costs 200 * 5 days to rank up, input 1000">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle-fill" viewBox="0 0 16 16">
                              <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
                            </svg>
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < 10; i++) { %>
                    <tr>
                        <td class="py-2 px-2">
                            <div class="form-group mb-0">
                                <input type="text" class="form-control text-center px-2" name="rankName" autocomplete="off" 
                                    <% if(coinData.isUsedForRankUp && coinData.rankUpCosts.ranks[i]) { %>value="<%= coinData.rankUpCosts.ranks[i].rankName %>"<% } %>>
                            </div>
                        </td>
                        <td class="table-cols-75 py-2 px-2">
                            <div class="form-group mb-0">
                                <input type="number" class="form-control text-center px-2" name="totalRankUpCost" autocomplete="off" 
                                    <% if(coinData.isUsedForRankUp && coinData.rankUpCosts.ranks[i]) { %>value="<%= coinData.rankUpCosts.ranks[i].totalCost %>"<% } %>>
                            </div>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>