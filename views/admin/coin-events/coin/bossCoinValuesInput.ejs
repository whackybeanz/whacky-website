<div class="<% if(coinData.isFromWeeklyBoss !== true) { %>d-none<% } %>" id="boss-coin-values">
    <h3 class="w-100 font-subsubheader font-weight-bold font-italic mb-1">Boss Coin Values</h3>

    <p class="mb-2">For each boss, enter coin amount if applicable. Else, leave blank.</p>
    <div class="border border-dark rounded-sm px-3 py-3 mb-5">
        <div class="form-group row mb-0">
            <label class="col-sm-3 col-form-label font-weight-bold">Coin Cap Type</label>
            <div class="font-table col-sm-9 d-flex flex-wrap h-100 px-3">
                <% bossData.forEach(boss => { %>
                    <div class="col-4 d-flex flex-column align-items-center justify-content-center text-center mb-3 px-2">
                        <input type="hidden" name="bossName" value="<%= boss.bossName %>">
                        <input type="hidden" name="bossDifficulty" value="<%= boss.difficulty %>">
                        <p class="font-weight-bold mb-1"><%= boss.bossName %> (<%= boss.difficulty.charAt(0).toUpperCase() %><% if(boss.difficulty === "Extreme") { %><%= boss.difficulty.charAt(1) %><% } %>)</p>
                        <input type="number" name="bossCoinAmount" class="form-control text-center" 
                            <% if(coinData.bossCoinDetails && coinData.bossCoinDetails.findIndex(elem => elem.bossName === boss.bossName && elem.difficulty === boss.difficulty) !== -1) { %>value="<%= coinData.bossCoinDetails[coinData.bossCoinDetails.findIndex(elem => elem.bossName === boss.bossName && elem.difficulty === boss.difficulty)].coinAmount %>"<% } %>>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>