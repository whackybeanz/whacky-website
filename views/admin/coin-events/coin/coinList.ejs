<h3 class="w-100 font-subheader font-weight-bold mb-2">Coin List</h3>
<table class="font-table w-100 table table-bordered table-hover mb-4">
    <thead>
        <tr>
            <th class="table-cols-125 text-center text-sm-left align-middle py-2">Coin</th>
            <th class="align-middle py-2">Coin Numbers</th>
            <th class="table-cols-50 text-center align-middle py-2">Tools</th>
        </tr>
    </thead>
    <tbody>
        <% coinEventData.coinDetails.forEach(coin => { %>
            <tr>
                <td class="table-cols-125 text-center text-sm-left align-middle py-2 position-relative">
                    <img class="mr-2" src="<% if(icons[`${coin.iconId}`]) { %><%= icons[`${coin.iconId}`].imgUrl %><% } %>">
                    <br class="d-inline d-sm-none">
                    <% if(icons[`${coin.iconId}`]) { %><%= icons[`${coin.iconId}`].name %><% } %>

                    <% if(coin.coinNotes && coin.coinNotes !== "") { %>
                        <div class="d-inline ml-1" data-toggle="tooltip" data-placement="bottom" title="<%= coin.coinNotes %>">
                            <i class="fas fa-info-circle"></i>
                        </div>
                    <% } %>
                </td>
                <td class="align-middle py-2">
                    <div class="d-flex flex-column align-items-start">
                        <p class="mb-0">
                            Max Possible Total: 
                            <% if(coin.mainSource.maxTotal === 0) { %>
                                <%= (coinGainsAndCosts[coin.iconId].mainSourceCoins + coinGainsAndCosts[coin.iconId].extraSourceCoins).toLocaleString('en-SG') %>
                            <% } else { %>
                                <%= coin.mainSource.maxTotal.toLocaleString('en-SG') %>
                            <% } %>
                        </p>

                        <% if(coinGainsAndCosts[coin.iconId].extraSourceCoins > 0) { %>
                            <p class="mb-0">- Main Source: <%= coinGainsAndCosts[coin.iconId].mainSourceCoins.toLocaleString('en-SG') %></p>

                            <p class="mb-0">- Extra Sources: <%= coinGainsAndCosts[coin.iconId].extraSourceCoins.toLocaleString('en-SG') %></p>
                        <% } %>

                        <% if(coin.isUsedForRankUp) { %>
                            <br/>
                            <p class="mb-0">Total Rank Up Costs: <%= coinGainsAndCosts[coin.iconId].rankCosts.toLocaleString('en-SG') %></p>
                            <br/>
                            <p class="mb-0 font-weight-bold">Amount Left: <%= (coinGainsAndCosts[coin.iconId].mainSourceCoins + coinGainsAndCosts[coin.iconId].extraSourceCoins - coinGainsAndCosts[coin.iconId].rankCosts).toLocaleString('en-SG') %></p>
                        <% } %>
                    </div>
                </td>
                <td class="table-cols-50 text-center align-middle py-2">
                    <a href="/admin/coin-event/<%= coinEventData.eventId %>/coin/<%= coin.iconId %>" class="btn btn-outline-info btn-sm"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>