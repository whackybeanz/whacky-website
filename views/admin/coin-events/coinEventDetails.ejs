<%- include("../../partials/header") %>
<%- include("../../partials/navbar") %>

<div class="container-fluid content d-flex flex-column flex-md-row p-0">
    <%- include("../adminSidebar") %>
    <div class="main-content-div col p-0 position-relative">
        <div class="w-100 d-flex align-items-center flex-column px-4 pt-4">
            <div class="w-100 d-flex justify-content-center align-items-center flex-column px-lg-4 pb-3">
                <div class="w-100 d-flex justify-content-center align-items-center position-relative mb-2">
                    <div class="w-100 flex-grow-1 border-top border-dark"></div>
                    <h1 class="font-header w-100 text-center m-0 px-0">Coin Event Details</h1>
                    <div class="w-100 flex-grow-1 border-top border-dark"></div>
                </div>

                <img class="coin-event-banner small mb-3" src="https://whacky-website.s3-ap-southeast-1.amazonaws.com/images/event/coin-events/<%= coinEventData.eventDetails.bannerImg %>">

                <div class="w-100 d-flex justify-content-start mb-3">
                    <a href="/admin/coin-events" class="btn btn-sm btn-outline-info px-3"><i class="fas fa-angle-double-left"></i> Back to Coin Events List</a>
                </div>

                <div class="d-flex w-100 flex-column align-items-center justify-content-center mb-3 py-3">
                    <div class="size-900 w-100">
                        <%- include("./coinList") %>
                        <%- include("./coinShopList") %>
                    </div>

                    <hr class="w-25 my-4">

                    <%- include("./addUpdateCoinEventForm") %>
                    <%- include("./coinBreakdown") %>
                    <%- include("./addUpdateCoinShopForm") %>
                </div>

                <form class="size-350 w-100" action="/admin/coin-event/<%= coinEventData._id %>/delete" method="POST" id="delete-coin-event-form">
                    <div class="col-sm-12 px-0">
                        <button type="submit" class="w-100 btn btn-sm btn-outline-danger">Delete Coin Event</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/scripts/commonScript.js"></script>
<script type="text/javascript" src="/scripts/admin/coinEventScript.js"></script>
<%- include("../../partials/footer") %>