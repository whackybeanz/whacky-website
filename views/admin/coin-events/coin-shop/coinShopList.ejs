<h3 class="w-100 font-subheader font-weight-bold d-flex align-items-center mb-2">Coin Shop List</h3>
<table class="font-table w-100 table table-bordered table-hover mb-5">
    <thead>
        <tr>
            <th class="table-cols-125 text-center text-sm-left align-middle py-2">Shop Name</th>
            <th class="align-middle py-2">Currency</th>
            <th class="table-cols-50 text-center align-middle py-2">Tools</th>
        </tr>
    </thead>
    <tbody>
        <% if(coinEventData.shops.length > 0) { %>
            <% coinEventData.shops.forEach((coinShop, index) => { %>
                <tr>
                    <td class="table-cols-125 text-center text-sm-left align-middle py-2 position-relative">
                        <div>
                            <%= coinShop.shopName %>

                            <% if(coinShop.shopNotes && coinShop.shopNotes !== "") { %>
                                <div class="d-inline ml-1" data-toggle="tooltip" data-placement="bottom" title="<%= coinShop.shopNotes %>">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle-fill" viewBox="0 0 16 16">
                                      <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
                                    </svg>
                                </div>
                            <% } %>
                        </div>
                        <div class="tradability-display position-absolute">
                            <% if(coinShop.defaultTradability === "untradable") { %>
                                <div class="d-inline ml-1" data-toggle="tooltip" data-placement="bottom" title="Most (or all) items in this shop are Untradable">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-slash-circle-fill" viewBox="0 0 16 16">
                                      <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.646-2.646a.5.5 0 0 0-.708-.708l-6 6a.5.5 0 0 0 .708.708l6-6z"/>
                                    </svg>
                                </div>
                            <% } else if(coinShop.defaultTradability === "inter-acct") { %>
                                <div class="d-inline ml-1" data-toggle="tooltip" data-placement="bottom" title="Most (or all) items in this shop are Inter-Account Transactions only">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-right" viewBox="0 0 16 16">
                                      <path fill-rule="evenodd" d="M1 11.5a.5.5 0 0 0 .5.5h11.793l-3.147 3.146a.5.5 0 0 0 .708.708l4-4a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 11H1.5a.5.5 0 0 0-.5.5zm14-7a.5.5 0 0 1-.5.5H2.707l3.147 3.146a.5.5 0 1 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 4H14.5a.5.5 0 0 1 .5.5z"/>
                                    </svg>
                                </div>
                            <% } %>
                        </div>
                    </td>
                    <td class="align-middle px-2">
                        <img class="mr-1" src="<% if(icons[`${coinShop.defaultCurrency}`]) { %><%= icons[`${coinShop.defaultCurrency}`].imgUrl %><% } %>">
                        <span>
                            <% if(icons[`${coinShop.defaultCurrency}`]) { %>
                                <%= icons[`${coinShop.defaultCurrency}`].name %>
                            <% } %>
                        </span>
                    </td>
                    <td class="table-cols-50 text-center align-middle py-2">
                        <a href="/admin/coin-event/<%= coinEventData.eventId %>/shop/<%= index %>" class="btn btn-outline-custom btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                              <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
                            </svg>
                        </a>
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td class="table-cols-75 text-center" colspan="3">- No shops added yet. Why not add some? -</td>
            </tr>
        <% } %>
    </tbody>
</table>