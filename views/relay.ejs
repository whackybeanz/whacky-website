<% include partials/header %>
<% include partials/navbar %>

<div class="container content h-100 d-flex p-0 pt-5">
	<div class="main-content-div w-100 p-0 mt-2 position-relative">
		<div class="single-info-page w-100 d-flex justify-content-start align-items-center flex-column px-4 pt-4 px-lg-0 pt-lg-4">
			<h1 class="font-header w-100 text-center m-0 mb-2">Tactical Relay</h1>

			<form class="relay-form w-100 mb-4">
				<div class="form-group row">
					<label for="select-date" class="col-6 col-form-label text-right font-weight-bold">Event Start Date</label>
					<div class="col-4 col-md-5 col-lg-6">
						<input type="date" class="form-control text-center" id="select-date" value="2020-03-18">
					</div>
				</div>
			</form>

			<div class="font-table w-100 mb-3">
				<div class="w-100 row d-flex justify-content-center text-center p-0 m-0">
					<div class="col single-class-type-list warrior-list d-flex flex-column text-center mb-3">
						<p class="class-type warrior w-100 font-weight-bold rounded-top mb-0 py-2">Warriors</p>
						<div class="input-list input-warrior-list w-100">
							<input type="text" placeholder="Warrior 1 (Any)" class="class-input w-100 border text-center mb-0" data-class="warrior" data-num="1">
							<input type="text" placeholder="Warrior 2 (Level 200+)" class="class-input w-100 border text-center mb-0" data-class="warrior" data-num="2">
						</div>
						<button class="font-table add-character-btn btn btn-small btn-outline-secondary w-100 d-flex justify-content-center align-items-center font-weight-bold border border-dark py-1" data-class="warrior">Add Warrior</button>
					</div>
					<div class="col single-class-type-list mage-list font-table d-flex flex-column text-center mb-3">
						<p class="class-type mage w-100 font-weight-bold rounded-top mb-0 py-2">Mages</p>
						<div class="input-list input-mage-list w-100">
							<input type="text" placeholder="Mage 1 (Any)" class="class-input w-100 border text-center mb-0" data-class="mage" data-num="1">
							<input type="text" placeholder="Mage 2 (Level 200+)" class="class-input w-100 border text-center mb-0" data-class="mage" data-num="2">
						</div>
						<button class="font-table add-character-btn btn btn-small btn-outline-secondary w-100 d-flex justify-content-center align-items-center font-weight-bold border border-dark py-1" data-class="mage">Add Mage</div>
					</button>
					<div class="col single-class-type-list archer-list font-table d-flex flex-column text-center mb-3">
						<p class="class-type archer w-100 font-weight-bold rounded-top mb-0 py-2">Archers</p>
						<div class="input-list input-archer-list w-100">
							<input type="text" placeholder="Archer 1 (Any)" class="class-input w-100 border text-center mb-0" data-class="archer" data-num="1">
							<input type="text" placeholder="Archer 2 (Level 200+)" class="class-input w-100 border text-center mb-0" data-class="archer" data-num="2">
						</div>
						<button class="font-table add-character-btn btn btn-small btn-outline-secondary w-100 d-flex justify-content-center align-items-center font-weight-bold border border-dark py-1" data-class="archer">Add Archer</div>
					</button>
					<div class="col single-class-type-list thief-list font-table d-flex flex-column text-center mb-3">
						<p class="class-type thief w-100 font-weight-bold rounded-top mb-0 py-2">Thieves</p>
						<div class="input-list input-thief-list w-100">
							<input type="text" placeholder="Thief 1 (Any)" class="class-input w-100 border text-center mb-0" data-class="thief" data-num="1">
							<input type="text" placeholder="Thief 2 (Level 200+)" class="class-input w-100 border text-center mb-0" data-class="thief" data-num="2">
						</div>
						<button class="font-table add-character-btn btn btn-small btn-outline-secondary w-100 d-flex justify-content-center align-items-center font-weight-bold border border-dark py-1" data-class="thief">Add Thief</div>
					</button>
					<div class="col single-class-type-list pirate-list font-table d-flex flex-column text-center mb-3">
						<p class="class-type pirate w-100 font-weight-bold rounded-top mb-0 py-2">Pirates</p>
						<div class="input-list input-pirate-list w-100">
							<input type="text" placeholder="Pirate 1 (Any)" class="class-input w-100 border text-center mb-0" data-class="pirate" data-num="1">
							<input type="text" placeholder="Pirate 2 (Level 200+)" class="class-input w-100 border text-center mb-0" data-class="pirate" data-num="2">
						</div>
						<button class="font-table add-character-btn btn btn-small btn-outline-secondary w-100 d-flex justify-content-center align-items-center font-weight-bold border border-dark py-1" data-class="pirate">Add Pirate</div>
					</button>
				</div>
				<div class="w-100 row d-flex justify-content-center flex-column align-items-center p-0 m-0">
					<button class="font-table perfect-score-btn btn btn-small btn-outline-secondary font-weight-bold border border-dark rounded-lg px-3 py-1">Perfect Score (Tactical Relay Grandmaster)</button>
					<!--<div>7,000 Points (Typhoon Growth Potion)</div>-->
				</div>
			</div>

			<table class="table table-bordered font-table">
				<thead>
					<tr>
						<th scope="col" class="mission-desc align-middle" rowspan="2">Mission</th>
						<th scope="col" class="text-center position-relative py-1" colspan="7">
							<div class="next-week">Week 1 <i class="fas fa-angle-double-right"></i></div>
							<div class="prev-week d-none"><i class="fas fa-angle-double-left"></i> Week 2</div>
						</th>
					</tr>
					<tr class="date-range"></tr>
				</thead>
				<tbody>
					<% missionList.forEach(function(mission, missionIndex) { %>
					<tr>
						<th scope="row" class="mission-desc"><%= mission %></th>
						<% for(var i = missionIndex; i < 14 + missionIndex; i++) { %>
							<td class="class-type text-center align-middle p-1 
								<%= classSelect[i % classSelect.length] %> <%= classSelect[i % classSelect.length] %>-<% if(missionIndex >= 5) { %>2<% } else { %>1<% } %>
								<% if(i < missionIndex + 7) { %>week-1<% } else { %>week-2 d-none<% } %>">
							</td>
						<% } %>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<script type="text/javascript" src="/scripts/relayScript.js"></script>
<% include partials/footer %>